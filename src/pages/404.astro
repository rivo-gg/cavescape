---
import Layout from '../layouts/Layout.astro';
---

<Layout title="404 - Page Not Found">
  <div class="flex flex-col items-center justify-center min-h-screen bg-zinc-900 text-white p-6 text-center">
    <h1 class="text-5xl font-bold mb-10 text-white">404</h1>
    
    <div class="pixelated w-64 h-64 mb-10">
      <img 
        src="/staff/dwarf.png" 
        alt="Pixel Art Dwarf"
        class="w-full h-full object-contain"
      />
    </div>
    
    <p class="text-xl text-white mb-8 max-w-lg">
      By my beard! This tunnel leads nowhere! We must head back to the main cavern.
    </p>
    
    <a 
      href="/" 
      class="inline-block bg-green-600 hover:bg-green-700 text-white font-medium py-3 px-6 rounded transition-colors"
    >
      Return Home
    </a>
  </div>
</Layout>