---
import Layout from '../layouts/Layout.astro'
---

<Layout title="404 - Rivo Not Found">
  <div class="flex flex-col items-center justify-center min-h-screen bg-zinc-900 text-white p-6 text-center">
    <!-- 404 Header -->
    <h1 class="text-5xl font-bold mb-10 text-white">404</h1>
    
    <!-- Extra large rivo pixel sprite facing left -->
    <div class="pixelated w-64 h-64 mb-10">
      <img 
        src="/staff/rivo.png" 
        alt="Pixel Art Rivo"
        class="w-full h-full object-contain"
      />
    </div>
    
    <!-- Text message below rivo -->
    <p class="text-xl text-white mb-8 max-w-lg">
     Glub glub! This tunnel is a dead end, my friend! We must swim back to the main reef!
    </p>
    
    <!-- Green button -->
    <a 
      href="/" 
      class="inline-block bg-[#354590] hover:bg-[#354590]/80 text-white font-medium py-3 px-6 rounded transition-colors"
    >
      Return Home
    </a>
  </div>
</Layout>